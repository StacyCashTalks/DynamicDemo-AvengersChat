@page "/"
@inject NavigationManager NavigationManager
@inject WebPubSubService WebPubSubService
@inject MessagesService MessagesService
@implements IDisposable

<PageTitle>Real-time Notifications</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>Real-time Notifications Demo</h1>
            
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Connection Status</h5>
                    <span class="badge @(WebPubSubService.IsConnected ? "bg-success" : "bg-danger")">
                        @(WebPubSubService.IsConnected ? "Connected" : "Disconnected")
                    </span>
                </div>
                <div class="card-body">
                    @if (!WebPubSubService.IsConnected)
                    {
                        <a href="/signin" class="btn btn-primary">
                            Connect
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-danger" @onclick="DisconnectAsync">
                            Disconnect
                        </button>

                        <div class="mt-3">
                            <small class="text-muted">
                                Connected as: <strong>@_connectedHero!.Alias</strong>
                            </small>
                        </div>
                    }
                </div>
            </div>

            @if (WebPubSubService.IsConnected)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Send Messages</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h6>Send to All</h6>
                            <div class="input-group">
                                <button class="btn btn-primary" @onclick="SendToAllAsync">Send to All</button>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6>Send to @_connectedHero!.Group.Name</h6>
                            <div class="input-group">
                                <button class="btn btn-primary" @onclick="SendToGroupAsync">Send to Group</button>
                            </div>
                        </div>

                        <div class="mb-0">
                            <h6>Send to Person</h6>
                            <div class="input-group">
                                <select class="form-select" @bind="_selectedPersonId">
                                    <option value="">Select Person</option> 
                                    @foreach (var hero in SuperHeros.SuperHeroes.Where(h => h.Id != WebPubSubService.CurrentUserId).OrderBy(h => h.Alias))
                                    {
                                        <option value="@hero.Id">@hero.Alias</option>
                                    }
                                </select>
                                <button class="btn btn-primary" @onclick="SendToHeroAsync">Send to Person</button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Messages</h5>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ClearMessages">
                            Clear
                        </button>
                    </div>
                    <div class="card-body">
                        @if (_messages.Count == 0)
                        {
                            <p class="text-muted">No messages received yet. Messages will appear here in real-time.</p>
                        }
                        else
                        {
                            <div class="message-list" style="max-height: 400px; overflow-y: auto;">
                                @foreach (var message in _messages.OrderByDescending(m => m.SentAt))
                                {
                                    <div class="alert alert-dismissible fade show" role="alert">
                                        @message.MessageText
                                    </div>
                                    <div>@message.SentAt</div>
                                    <div>@SuperHeros.SuperHeroes.First(sh => sh.Id == message.FromPersonId).Alias</div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private readonly List<Message> _messages = [];
    private string? _selectedPersonId;
    private SuperHero? _connectedHero;

    protected override void OnInitialized()
    {
        WebPubSubService.OnMessageReceived += OnMessageReceived;
        WebPubSubService.OnConnectionStateChanged += OnConnectionStateChanged;
    }

    protected override void OnParametersSet()
    {
        _connectedHero = WebPubSubService.IsConnected 
            ? SuperHeros.SuperHeroes.First(sh => sh.Id == WebPubSubService.CurrentUserId) 
            : null;
    }

    private async Task DisconnectAsync()
    {
        await WebPubSubService.DisconnectAsync();
        NavigationManager.NavigateTo("/signin");
    }

    private async Task SendToAllAsync()
    {
        await MessagesService.SendToAllAsync();
    }

    private async Task SendToGroupAsync()
    {
        if (_connectedHero is null)
        {
            return;
        }
        
        await MessagesService.SendToGroupAsync();
    }
    
    private async Task SendToHeroAsync()
    {
        if (_selectedPersonId is null)
        {
            return;
        }
        await MessagesService.SendToHeroAsync(_selectedPersonId);
    }
    
    private void OnConnectionStateChanged(bool connected)
    {
        _connectedHero = WebPubSubService.IsConnected 
            ? SuperHeros.SuperHeroes.First(sh => WebPubSubService.CurrentUserId == sh.Id) 
            : null;

        InvokeAsync(StateHasChanged);
    }

    private void OnMessageReceived(Message message)
    {
        _messages.Add(message);

        InvokeAsync(StateHasChanged);
    }

    private void ClearMessages()
    {
        _messages.Clear();
    }

    public void Dispose()
    {
        WebPubSubService.OnMessageReceived -= OnMessageReceived;
        WebPubSubService.OnConnectionStateChanged -= OnConnectionStateChanged;
    }

    private string GetHeroAlias(string id)
    {
        return SuperHeros.SuperHeroes.First(sh => sh.Id == id).Alias;
    }
}